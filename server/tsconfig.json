{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext", // Configura `module` a `NodeNext`
        "moduleResolution": "NodeNext", // Alineado con `module` para ESM
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["es2022"]
    }
}
